rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }

    // Validate chat messages
    match /chats/{userId}/messages/{messageId} {
      // Common validation functions
      function isValidMessage() {
        let data = request.resource.data;
        return data.keys().hasAll(['content', 'role', 'timestamp'])
          && data.content is string
          && data.content.size() <= 1000  // Max 1000 characters
          && data.role in ['user', 'assistant']
          && data.timestamp is timestamp;
      }

      function isOwner() {
        return request.auth != null && request.auth.uid == userId;
      }

      // Rules
      allow read: if isOwner();
      allow create: if isOwner() && isValidMessage();
      allow update: if false;  // Messages cannot be edited
      allow delete: if isOwner();
    }
  }
}